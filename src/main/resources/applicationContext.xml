<beans
    xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <context:property-placeholder location="classpath:**/*.properties"/>
    
    <bean id="objectMapper" class="com.fasterxml.jackson.databind.ObjectMapper"/>
    
    <bean id="dbClientRequestFilter" class="org.gravidence.gravifon.filter.LogCouchDBClientRequestFilter">
        <property name="objectMapper" ref="objectMapper"/>
    </bean>
    
    <bean id="dbClientResponseFilter" class="org.gravidence.gravifon.filter.LogCouchDBClientResponseFilter"/>
    
    <bean id="dbClient" class="org.gravidence.gravifon.db.CouchDBClient">
        <property name="objectMapper" ref="objectMapper"/>
        <property name="logRequestFilter" ref="dbClientRequestFilter"/>
        <property name="logResponseFilter" ref="dbClientResponseFilter"/>
        
        <property name="url" value="${org.gravidence.gravifon.db.url}"/>
    </bean>

</beans>
